<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Orange_Peel"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/google_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/payment_dialog_imageview_height"
        android:layout_marginTop="@dimen/payment_dialog_imageview_marginTop"
        android:src="@drawable/google" />

    <ImageView
        android:id="@+id/paypal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/payment_dialog_imageview_height"
        android:layout_marginTop="@dimen/payment_dialog_imageview_marginTop"
        android:src="@drawable/paypal" />

    <ImageView
        android:id="@+id/wechat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/payment_dialog_imageview_height"
        android:layout_marginTop="@dimen/payment_dialog_imageview_marginTop"
        android:src="@drawable/wechat" />

    <ImageView
        android:id="@+id/credit_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/payment_dialog_imageview_height"
        android:layout_marginTop="@dimen/payment_dialog_imageview_marginTop"
        android:src="@drawable/cards" />

    <Spinner
        android:id="@+id/option_spinner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/payment_dialog_spinner_height" />

    <Spinner
        android:id="@+id/res_spinner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/payment_dialog_spinner_height" />

    <Button
        android:id="@+id/payment_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/payment_dialog_button_marginTop"
        android:text="@string/cancel_payment" />

</LinearLayout>